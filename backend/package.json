{
  "name": "socratic-wingman-backend",
  "version": "1.0.0",
  "description": "MongoDB-based authentication backend for SocraticWingman",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test/auth.test.js",
    "frontend:start": "cd ../frontend && npm start",
    "frontend:dev": "cd ../frontend && npm run dev",
    "full:dev": "concurrently \"npm run dev\" \"npm run frontend:dev\""
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10"
  },
  "keywords": [
    "mongodb",
    "authentication",
    "jwt",
    "express",
    "mongoose"
  ],
  "author": "SocraticWingman Team",
  "license": "MIT"
}
